<%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure you want to sign out?' }, class: "btn btn-danger mb-3" %>

<h1>Your Organizations</h1>

<%= link_to 'Create New Organization', new_organization_path %>

<ul>
  <% @organizations.each do |org| %>
    <li>
      <%= link_to org.name, organization_path(org) %>
      <% if current_user.admin_of?(org) %>
        | <%= link_to 'Analytics', analytics_organization_path(org) %>
        | <%= link_to 'Edit', edit_organization_path(org) %>
        | <%= link_to 'Delete', organization_path(org), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>
